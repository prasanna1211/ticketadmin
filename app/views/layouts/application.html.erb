<!DOCTYPE html>
<html>
<head>
  <title>Ticketadmin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>

<!-- Navbar starts here  --> 
<nav class="nav-theme navbar navbar-custom navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Ticket Admin <span class="glyphicon glyphicon-registration-mark" aria-hidden="true"></span></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Home', root_path %><span class="sr-only">(current)</span></li> <!-- Link to home page-->
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if !user_signed_in? %>
          <li><%= link_to 'Register', new_user_registration_path %><span class="sr-only">(current)</span></li> <!-- Link to Register page-->
          <li><%= link_to 'Login', new_user_session_path %><span class="sr-only">(current)</span></li> <!-- Link to login page-->
        <% else %>
          <li class="nav-text"><span class="font-theme"> Signed in as <%= current_user.email %> </span><span class="sr-only">(current) </span></li>
          <li><%= link_to 'Logout', destroy_user_session_path,method: :delete %><span class="sr-only">(current)</span></li> <!-- Link to logout page-->
        <% end %>
      </ul>
      
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<!-- Navbar Ends here -->
<%= yield %>

</body>
</html>
